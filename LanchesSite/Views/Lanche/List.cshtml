@model IEnumerable<LanchesSite.Models.Lanche>

<div>
    <h2>@ViewData["Titulo"]</h2>
</div>
<h2>@ViewData["Data"]</h2>
<hr />
<h3>@ViewBag.Total @ViewBag.TotalLanches</h3>
<hr />

<h3>@TempData["Nome"]</h3>

<br />

<div class="container">
    <div class="row justify-content-center">
        @foreach (var lanche in Model)
        {
            <div class="col-md-4">
                <p><img src="@lanche.ImagemUrl" class="img-fluid"/></p>
                <h3>Preço: @lanche.Preco.ToString("c")</h3>
                <h4>@lanche.Nome</h4>
                <p>@lanche.DescricaoCurta</p>
                <br />
            </div>
        }
    </div>

</div>